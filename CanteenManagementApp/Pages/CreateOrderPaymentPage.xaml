<Page x:Class="CanteenManagementApp.Pages.CreateOrderPaymentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CanteenManagementApp.Pages"
      xmlns:viewModel="clr-namespace:CanteenManagementApp.MVVM.ViewModel"
      mc:Ignorable="d" 
      d:Background="#F8F8F8"
      d:DesignHeight="600" d:DesignWidth="665"
      Title="CreateOrderPaymentPage">
    <Page.DataContext>
        <viewModel:CreateOrderViewModel/>
    </Page.DataContext>
    <Grid Margin="20 10 10 10">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="200"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="420"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Content="Trở về"
                HorizontalAlignment="Left"
                Command="NavigationCommands.BrowseBack"
                Style="{StaticResource ButtonBack}"/>

        <TextBlock Text="Thanh toán"
                   Grid.Row="1"
                   Style="{StaticResource TextblockTitle}"/>

    </Grid>
</Page>
