                                               TextWrapping="WrapWithOverflow"
                                               Width="250">
                                               <!--Foreground="#0033A1"-->

                                        <TextBlock.Visibility>
                                            <MultiBinding Converter="{StaticResource InputToVisibility}">
                                                <Binding ElementName="TextboxInput" Path="Text" />
                                                <Binding ElementName="TextboxInput" Path="IsFocused"/>

