<Window x:Class="CanteenManagementApp.MVVM.View.EditItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CanteenManagementApp.MVVM.View"
             mc:Ignorable="d" 
             d:Background="#F8F8F8"
             Height="535" Width="500"
             d:DesignHeight="535" d:DesignWidth="500">
    <Canvas>
        <Image Source="/Images/logo.png"
                   Width="56" Canvas.Left="23" Canvas.Top="25" Height="53"/>

        <TextBlock Text="Chi tiết mặt hàng"
                   Style="{StaticResource TextblockTitle}" Canvas.Left="97" Canvas.Top="27"/>
        <TextBlock Text="Món ăn hàng ngày"
                   FontSize="16.15"
                   Style="{StaticResource TextblockTitle}" Canvas.Left="203" Canvas.Top="80"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Canvas.Left="170" Canvas.Top="123">
            <TextBlock   Width="30" Height="20" Text="Id:" FontSize="15" Style="{StaticResource TextblockTitleSmall}"/>
            <TextBox x:Name="nameTextBox" Padding="2" Text="Cà xào" Width="133" Height="25"  HorizontalAlignment="Center" VerticalAlignment="Center" />
        </StackPanel>
    </Canvas>
</Window>
