<Page x:Class="CanteenManagementApp.MVVM.View.DailyReport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CanteenManagementApp.MVVM.View"
             mc:Ignorable="d" 
             d:Background="#F8F8F8"
             d:DesignHeight="600" d:DesignWidth="665">
    <Grid x:Name="grid_dailyreport" Margin="30 10 10 10">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="360"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Button Width="100" HorizontalAlignment="Left" 
                Margin=" 0 20 0 0"
                Background="Transparent"
                Click="ButtonLink_Click"
                Style="{StaticResource ReportNavigationButtonTheme}"
                Tag="/Images/backicon.png"
                Content="Trở về">
        </Button>
        <TextBlock Text="Báo cáo ngày"
                   Grid.Row="1"
                   Style="{StaticResource TextblockTitle}"/>
        
    </Grid>
</Page>
